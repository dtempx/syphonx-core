{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "env": { "DEBUG": "1" },
            "program": "${file}",
            "args": []
        },
        {
            "name": "Online",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/**/*.js"],
            //"env": { "DEBUG": "1" },
            "program": "${workspaceFolder}/online.js",
            "args": ["./examples/1.json", "--debug", "--show"]
        },
        {
            "name": "Offline",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/**/*.js"],
            //"env": { "DEBUG": "1" },
            "program": "${workspaceFolder}/offline.js",
            //"args": ["./examples/1.json", "./examples/1.html"]
            "args": ["./examples/2.json", "./examples/2.html"]
        },
        {
            "name": "Run Tests",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std", // WORKAROUND https://github.com/microsoft/vscode/issues/19750
            "cwd": "${workspaceFolder}",
            //"env": { "DEBUG": "1" },
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceFolder}/test/**/*.js",
                "--timeout", "999999",
                "--slow", "5000",
                "--colors"
            ]
        },
        {
            "name": "Run Selected Test",
            "type": "node",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std", // WORKAROUND https://github.com/microsoft/vscode/issues/19750
            "cwd": "${workspaceFolder}",
            "env": { "DEBUG": "1" },
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceFolder}/test/**/*.js",
                "--timeout", "999999",
                "--slow", "5000",
                "--colors",
                "--grep", "${selectedText}"
            ]
        }
    ]
}